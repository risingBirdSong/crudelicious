
@{
    ViewData["Title"] = "NewDish";
}
@model CRUDelicious.Models.Dish

<div class="container">
    <div class="row">
        <a asp-action="Index">Home</a>
    </div>

    <div class="container">
        <div class="row">
            <form asp-controller="Home" asp-action="NewDishDisplay" class="form-control" method="post">
                <div class="chunkA row ">
                    <span asp-validation-for="@Model.Chef" ></span>
                    <label asp-for="@Model.Chef"></label>
                    <input class="form-control" asp-for="@Model.Chef" />

                    <span asp-validation-for="@Model.Name"></span>
                    <label asp-for="@Model.Name"></label>
                    <input class="form-control" asp-for="@Model.Name" />

                    <span asp-validation-for="@Model.Calories"></span>
                    <label asp-for="@Model.Calories"></label>
                    <input class="form-control" asp-for="@Model.Calories" />
                </div>
                <div class="row">
                    <span asp-validation-for="@Model.Tastiness"></span>
                    <label asp-for="@Model.Tastiness"></label>
                    <select class="form-control" asp-for="@Model.Tastiness">
                        @for (var i = 1; i <= 10; i++)
                        {
                            <option value="@i">@i</option>

                        }
                    </select>
                </div>
                <div class="row">
                    <span asp-validation-for="@Model.Description"></span>
                    <label asp-for="@Model.Description"></label>
                    <input class="form-control" asp-for="@Model.Description" />
                </div>
                <input type="submit" name="name" value="add the dish" />
            </form>
        </div>
    </div>

</div>

